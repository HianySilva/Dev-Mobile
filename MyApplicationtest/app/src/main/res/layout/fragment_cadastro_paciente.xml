<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Seção: Dados Pessoais -->
        <TextView
            android:text="Dados Pessoais"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Nome -->
        <TextView
            android:text="Nome Completo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_nome"
            android:hint="Digite seu nome"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Data de nascimento -->
        <TextView
            android:text="Data de Nascimento:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_data_nascimento"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Número prontuário -->
        <TextView
            android:text="Nº Prontuário:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_numero_prontuario"
            android:hint="Somente números"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Telefone -->
        <TextView
            android:text="Telefone:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_telefone"
            android:hint="(00) 00000-0000"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Ano do Diagnóstico -->
        <TextView
            android:text="Ano do Diagnóstico:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_ano_diagnostico"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Endereço -->
        <TextView
            android:text="Endereço:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_endereco"
            android:hint="Rua, número, bairro, cidade"
            android:inputType="textPostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- CPF -->
        <TextView
            android:text="CPF:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_cpf"
            android:hint="Somente números"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Gênero -->
        <TextView
            android:text="Gênero:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkbox_feminino"
                android:text="Feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_masculino"
                android:text="Masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Tipo sanguíneo -->
        <TextView
            android:text="Tipo Sanguíneo:"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinner_tipo_sanguineo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Diagnóstico confirmado -->
        <TextView
            android:text="Diagnóstico confirmado:"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkbox_diagnostico_sim"
                android:text="Sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/checkbox_diagnostico_nao"
                android:text="Não"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Histórico de sintomas -->
        <TextView
            android:text="Histórico de Sintomas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Data do sintoma -->
        <TextView
            android:text="Data do Sintoma:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_data_sintoma"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Descrição do sintoma -->
        <TextView
            android:text="Descrição do Sintoma:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/input_descricao_sintoma"
            android:hint="Sintomas clínicos observados"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botão adicionar nova consulta -->

        <!-- Botões ação -->

        <ImageButton
            android:id="@+id/btn_add_consulta"
            android:layout_width="37dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:contentDescription="Adicionar nova consulta"
            android:src="@android:drawable/ic_input_add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar" />

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Salvar" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
