<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título Centralizado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PSIQUIATRICO"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Item: ANSIEDADE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ansiedade"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/rgAnsiedade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbAnsiedadeSim" android:text="Sim" />
                <RadioButton android:id="@+id/rbAnsiedadeNao" android:text="Não" />
            </RadioGroup>
        </LinearLayout>

        <!-- Item: DEPRESSÃO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Depressão"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/Depressão"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbDepressãoSim" android:text="Sim" />
                <RadioButton android:id="@+id/rbDepressãoNao" android:text="Não" />
            </RadioGroup>
        </LinearLayout>

        <!-- ALUCINAÇÕES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Alucinações"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/rgAlucinações"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbAlucinaçõesSim" android:text="Sim" />
                <RadioButton android:id="@+id/rbAlucinaçõesNao" android:text="Não" />
            </RadioGroup>
        </LinearLayout>

        <!-- Item: INSÔNIA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Insônia"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/Insônia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton android:id="@+id/rbInsôniaSim" android:text="Sim" />
                <RadioButton android:id="@+id/rbInsôniaNao" android:text="Não" />
            </RadioGroup>
        </LinearLayout>



        <!-- OBSERVAÇÕES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observações Adicionais:" />

        <EditText
            android:id="@+id/etObservacoes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/editbox_background_normal"
            android:gravity="top"
            android:hint="Digite aqui..." />

        <!-- ANEXAR -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAnexar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_upload" />


            <TextView
                android:id="@+id/tvAnexar"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anexar exames/laboratoriais"
                android:textColor="#0000EE" />
        </LinearLayout>

        <!-- BOTÃO SALVAR -->
        <Button
            android:id="@+id/btnSalvarGeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar / Psiquiatrico"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0971b2"/>/>
    </LinearLayout>
</ScrollView>
